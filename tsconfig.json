{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/": [
        "src/"
      ],
      "@": [
        "node_modules"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}